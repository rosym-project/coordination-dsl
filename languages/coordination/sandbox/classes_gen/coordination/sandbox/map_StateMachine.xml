<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0" initialstate="SMCS0">
  <state id="SMCS0">
    <onentry>
      <log expr="Entering composite state SMCS0"></log>
    </onentry>
    <onexit>
      <log expr="Leaving composite state SMCS0"></log>
    </onexit>
    <state id="SMCS0PS0">
      <onentry>
        <send event="enteringSMCS0PS0"></send>
        <log expr="Entering parallel state SMCS0PS0"></log>
      </onentry>
      <onexit>
        <send event="leavingSMCS0PS0"></send>
        <log expr="Leaving parallel state SMCS0PS0"></log>
      </onexit>
      <!--State A - Transition on specific event or after one second-->
      <state id="SMCS0PS0S0">
        <onentry>
          <log expr="'Entering state System Idle'"></log>
          <log expr="'Entered State: System Idle'"></log>
        </onentry>
        <onexit>
          <log expr="'Leaving state SMCS0PS0S0'"></log>
        </onexit>
      </state>
      <state id="SMCS0PS0S1">
        <onentry>
          <log expr="'Entering state Human Present'"></log>
          <log expr="'Entered State: Human Present'"></log>
          <send event="'SMCS0PS0S1wait1000ms'" delay="'1000ms'"></send>
        </onentry>
        <onexit>
          <log expr="'Leaving state SMCS0PS0S1'"></log>
        </onexit>
        <transition event="SMCS0PS0S1wait1000ms" target="SMCS0PS0S2"></transition>
      </state>
      <state id="SMCS0PS0S2">
        <onentry>
          <log expr="'Entering state Initialise Interaction'"></log>
          <log expr="'Entered State: Initialise Interaction'"></log>
        </onentry>
        <onexit>
          <log expr="'Leaving state SMCS0PS0S2'"></log>
        </onexit>
      </state>
      <state id="SMCS0PS0S3">
        <onentry>
          <log expr="'Entering state Interaction Done'"></log>
          <log expr="'Entered State: Interaction Done'"></log>
          <send event="'SMCS0PS0S3wait0ms'" delay="'0ms'"></send>
        </onentry>
        <onexit>
          <log expr="'Leaving state SMCS0PS0S3'"></log>
        </onexit>
        <transition event="SMCS0PS0S3wait0ms" target="SMCS0PS0S0"></transition>
      </state>
      <state id="SMCS0PS0S4">
        <onentry>
          <log expr="'Entering state System Error'"></log>
          <log expr="'Entered State: System Error'"></log>
        </onentry>
        <onexit>
          <log expr="'Leaving state SMCS0PS0S4'"></log>
        </onexit>
      </state>
    </state>
  </state>
</scxml>