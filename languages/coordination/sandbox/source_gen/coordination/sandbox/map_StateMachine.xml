<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:rsb="http://opensource.cit-ec.de/rsb" version="1.0" initialstate="_Bar">
  <state id="_Bar">
    <onentry>
      <log expr="Entering composite state _Bar"></log>
    </onentry>
    <onexit>
      <log expr="Leaving composite state _Bar"></log>
    </onexit>
    <state id="_Bar_Paarallel_ds">
      <onentry>
        <send event="entering_Bar_Paarallel_ds"></send>
        <log expr="Entering parallel state _Bar_Paarallel_ds"></log>
      </onentry>
      <onexit>
        <send event="leaving_Bar_Paarallel_ds"></send>
        <log expr="Leaving parallel state _Bar_Paarallel_ds"></log>
      </onexit>
      <!--State A - Transition on specific event or after one second-->
      <state id="_Bar_Paarallel_ds_System_Idle">
        <onentry>
          <log expr="'Entering state System Idle'"></log>
          <log expr="'Entered State: System Idle'"></log>
        </onentry>
        <onexit>
          <log expr="'Leaving state System Idle'"></log>
        </onexit>
      </state>
      <state id="_Bar_Paarallel_ds_Human_Present">
        <onentry>
          <log expr="'Entering state Human Present'"></log>
          <log expr="'Entered State: Human Present'"></log>
          <send event="'_Bar_Paarallel_ds_Human_Presentwait1000ms'" delay="'1000ms'"></send>
        </onentry>
        <onexit>
          <log expr="'Leaving state Human Present'"></log>
        </onexit>
        <transition event="_Bar_Paarallel_ds_Human_Presentwait1000ms" target="_Bar_Paarallel_ds_Initialise_Interaction"></transition>
      </state>
      <state id="_Bar_Paarallel_ds_Initialise_Interaction">
        <onentry>
          <log expr="'Entering state Initialise Interaction'"></log>
          <log expr="'Entered State: Initialise Interaction'"></log>
        </onentry>
        <onexit>
          <log expr="'Leaving state Initialise Interaction'"></log>
        </onexit>
      </state>
      <state id="_Bar_Paarallel_ds_Interaction_Done">
        <onentry>
          <log expr="'Entering state Interaction Done'"></log>
          <log expr="'Entered State: Interaction Done'"></log>
          <send event="'_Bar_Paarallel_ds_Interaction_Donewait0ms'" delay="'0ms'"></send>
        </onentry>
        <onexit>
          <log expr="'Leaving state Interaction Done'"></log>
        </onexit>
        <transition event="_Bar_Paarallel_ds_Interaction_Donewait0ms" target="_Bar_Paarallel_ds_System_Idle"></transition>
      </state>
      <state id="_Bar_Paarallel_ds_System_Error">
        <onentry>
          <log expr="'Entering state System Error'"></log>
          <log expr="'Entered State: System Error'"></log>
        </onentry>
        <onexit>
          <log expr="'Leaving state System Error'"></log>
        </onexit>
      </state>
    </state>
  </state>
</scxml>